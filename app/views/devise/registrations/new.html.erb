<h1 class="signupTitle">Sign up</h1>

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>

  <%= devise_error_messages! %>

  <p class="signupTip" style="font-size: 18px;"><%= f.label :username %><br />
    <%= f.text_field :username, :autofocus => true %></p>

  <p class="signupTip" style="font-size: 18px;"><%= f.label :email %><br />
    <%= f.text_field :email %></p>

  <div class="signupTip" style="font-size: 18px;"><%= f.label :password %><br />
    <%= f.password_field :password %></div>

  <div class="signupTip" style="font-size: 18px;"><%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation %></div>

  <input class="btn btn-success" style="font-size:20px; font-family:'Elsie Swash Caps';" name="commit" type="submit" value="Sign up">
<% end %>

<%= link_to "Forgot your password?", new_password_path(resource_name) %><br />

<style type="text/css">
  .signupTitle{
    color:darkorange;
    font-family: 'Merienda One';
  }

  .signupTip{
    font-family: 'Elsie Swash Caps';
    color: lightblue;
  }

  body{
    padding-top: 200px;
    padding-left: 400px;
    background-color : black;
    background-image : none;
  }
</style>